<%- include("partials/header") %>
<section class="content show-sec mx-auto">
    <div class="p-1 my-4 container mx-auto individual">
        <div class="py-6 px-2 grid grid-cols-2 ">
            <label for="name">Name</label>
            <input disabled class="text-left" type="text" name="name" id="name" value="<%=customer.name%>">
        </div>
        <div class="py-6 px-2 grid grid-cols-2">
            <label for="email">Email</label>
            <input disabled class="text-left" type="text" name="email" id="email" value="<%=customer.email%>">
        </div>
        <div class="py-6 px-2 grid grid-cols-2">
            <label for="gender">Gender</label>
            <input disabled class="text-left" type="text" name="gender" id="gender" value="<%=customer.gender%>">
        </div>
        <div class="py-6 px-2 grid grid-cols-2">
            <label for="dob">Date of Birth</label>
            <input disabled class="text-left" type="text" name="dob" id="dob" value="<%=customer.dob%>">
        </div>
        <div class="py-6 px-2 grid grid-cols-2">
            <label for="balance">Balance</label>
            <input disabled class="text-left" type="text" name="balance" id="balance" value="<%=customer.balance%>">
        </div>
        <div class="py-6 px-2 grid grid-cols-2">
            <a id="transfer-btn" href="/customer/<%=customer.id%>/transfer">
                <button class="startbtn px-6 py-2 my-6 rounded-full text-white font-medium mt-4 focus:outline-none">Transfer</button>
            </a>
            <a href="/customers">
                <button class="startbtn px-6 py-2 my-6 rounded-full text-white font-medium mt-4 focus:outline-none">Go Back</button>
            </a>
        </div>
        
    </div>
</section>
<%- include("partials/footer") %>
